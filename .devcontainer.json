{
    "name": "React Native Expo with Android",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "postCreateCommand": "yarn install && npx expo prebuild --platform android",
    "forwardPorts": [19000, 19001, 19002, 19006, 8081, 8082, 9000, 9001],
    "customizations": {
        "vscode": {
            "extensions": ["expo.vscode-expo-extension"]
        }
    }
}
